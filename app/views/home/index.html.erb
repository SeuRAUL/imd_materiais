<p id="notice"><%= notice %></p>

<h1>Listing your Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Tilte</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.tilte %></td>
        <td><%= task.description %></td>
        <td><%= link_to icon('eye'), task %></td>
        <td><%= link_to icon('pencil'), edit_task_path(task) %></td>
        <td><%= link_to icon('trash-o'), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>