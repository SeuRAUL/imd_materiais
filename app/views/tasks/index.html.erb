<p id="notice"><%= flash[:notice] %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <div class="col-xs-12">
        <div class="thumbnail text-center">
          <i class="fa fa-user fa-5x"></i>
          <div class="caption">
            <h3><%= current_user.nickname %></h3>
            <p>Tarefas</p>
            <div class="progress">
              <div class="progress-bar progress-bar-info progress-bar-striped" style="width: 77%">
                <span class="sr-only">77% Completo</span>
              </div>
            </div>
            <p>Materiais</p>
            <div class="progress">
              <div class="progress-bar progress-bar-success" style="width: 65%">
                <span class="sr-only">55% Aprovado (success)</span>
              </div>
              <div class="progress-bar progress-bar-warning progress-bar-striped" style="width: 20%">
                <span class="sr-only">20% Em analise (warning)</span>
              </div>
              <div class="progress-bar progress-bar-danger" style="width: 15%">
                <span class="sr-only">10% Reprovado (danger)</span>
              </div>
            </div>
          </div>
        </div>

        <div class="text-center">
          <h3>Actions</h3>
          <div class="btn-group-vertical" role="group">
            <%= link_to 'New Task', new_task_path, class: "btn btn-primary btn-lg active"  %>
            <%= link_to 'New Task', new_task_path, class: "btn btn-primary btn-lg active"  %>
            <%= link_to 'New Task', new_task_path, class: "btn btn-primary btn-lg active"  %>
            <%= link_to 'New Task', new_task_path, class: "btn btn-primary btn-lg active"  %>
          </div>  
        </div>

      </div>
    </div>

    <div class="col-xs-9">
      <div class="col-xs-12">
        <div class="panel panel-warning">
          <div class="panel-heading">Tarefas pendentes</div>
          <div class="panel-body">
            <table class="table">
              <tr>
                <th>Tilte</th>
                <th>Description</th>
                <th>Status</th>
                <th colspan="3">Actions</th>
              </tr>
              
              <% @tasks.each do |task| %>
              <tr>
                <td><%= task.tilte %></td>
                <td><%= task.description %></td>
                <td><%= task.status %></td>
                <td><%= link_to 'Show', task %></td>
                <td><%= link_to 'Edit', edit_task_path(task) %></td>
                <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="panel panel-success">
          <div class="panel-heading">Tarefas completas</div>
          <div class="panel-body">
            <table class="table">
              <tr>
                <th>Tilte</th>
                <th>Description</th>
                <th>Status</th>
                <th colspan="3">Actions</th>
              </tr>
              
              <% @finished_tasks.each do |finished_task| %>
              <tr>
                <td><%= finished_task.tilte %></td>
                <td><%= finished_task.description %></td>
                <td><%= finished_task.status %></td>
                <td><%= link_to 'Show', finished_task %></td>
                <td><%= link_to 'Edit', edit_task_path(finished_task) %></td>
                <td><%= link_to 'Destroy', finished_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>